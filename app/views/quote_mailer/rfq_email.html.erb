    <tr>
    	<td>

        <!-- Main Email Body : BEGIN -->
        <table border="0" width="100%" cellpadding="0" cellspacing="0" bgcolor="#ffffff">
      
          <!-- Single Fluid Image, No Crop : BEGIN -->
          <tr>
            <td valign="middle" align="center" bgcolor="#261514" style="padding:4%; color: #fff;">
              <img alt="Vista Hardwood Logo" src="http://static.vistahardwood.com/images/vista-logo-320x105.png" align="center" border="0" style="margin: auto;">
            </td>
          </tr>
          <!-- Single Fluid Image, No Crop : END -->

          <!-- Full Width, Fluid Column : BEGIN -->
          <tr>
            <td class="body-text" style="padding: 4% 4% 1%; font-family: 'Open Sans', Arial, sans-serif; font-size: 18px; line-height: 1.3; color: #666666;">
              Hi <%= @quote.name.split.map(&:capitalize).join(' ') %>,
              <br><br>
              We have received your request for a quote and we will be contacting you shortly to setup a time to perform your estimate.
            </td>
          </tr>
          <!-- Full Width, Fluid Column : END -->
				
          <!-- Data Table : BEGIN -->
          <tr>
                <td style="padding: 1% 4%;">
					<table cellspacing="0" cellpadding="0" border="0" width="100%" style="">
						<tr>
							<td class="body-text" valign="top" align="left" style="padding: 8px 0; font-family: 'Open Sans', Arial, sans-serif; font-size: 15px; line-height: 1.3; color: #333333; font-weight: bold; border-bottom: 1px solid #cccccc">
								Contact Information
							</td>
						</tr>
						<tr>
							<td class="body-text" valign="top" align="left" style="padding: 8px 0; font-family: 'Open Sans', Arial, sans-serif; font-size: 15px; line-height: 1.3; color: #333333; border-bottom: 1px solid #eeeeee">
							    <span style="font-weight: bold;">City: </span><%= @quote.city %><br/>
								<span style="font-weight: bold;">Phone: </span><%= @quote.phone %><br/>
								<span style="font-weight: bold;">Email: </span><a href="mailto:<%= @quote.email %>"><%= @quote.email %></a><br/>
							</td>
						</tr>
					</table>
                </td>
          </tr>	
		  <!-- Data Table : END -->
		  
		  <!-- Data Table : BEGIN -->
          <tr>
                <td style="padding: 1% 4%;">
					<table cellspacing="0" cellpadding="0" border="0" width="100%" style="">
						<tr>
							<td class="body-text" valign="top" align="left" style="padding: 8px 0; font-family: 'Open Sans', Arial, sans-serif; font-size: 15px; line-height: 1.3; color: #333333; font-weight: bold; border-bottom: 1px solid #cccccc">
								Project Details
							</td>
						<tr>
							<td class="body-text" valign="top" align="left" style="font-style: italic; padding: 8px 0; font-family: 'Open Sans', Arial, sans-serif; font-size: 15px; line-height: 1.3; color: #333333; border-bottom: 1px solid #eeeeee">
							    <%= @quote.details %>
							</td>
						</tr>
					</table>
                </td>
          </tr>	
		  <!-- Data Table : END -->		

          <!-- Full Width, Fluid Column : BEGIN -->
          <tr>
            <td class="body-text" style="padding: 4%; font-family: 'Open Sans', Arial, sans-serif; font-size: 18px; line-height: 1.3; color: #666666;">
              Thank you for contacting <a href="http://www.vistahardwood.com">Vista Hardwood Floors</a>.
              <br><br>
              <em>â€“ Michael P. Noone</em>
            </td>
          </tr>
          <!-- Full Width, Fluid Column : END -->

        </table>
        <!-- Main Email Body : END -->
        
      </td>
		</tr>
    
    <!-- Footer : BEGIN -->
    <tr>
       <td style="background-color: #a6a498; text-align:center; padding: 4%; font-family: 'Open Sans', Arial, sans-serif; font-size: 13px; line-height: 1.3; color:#fff;">
        You received this email because you requested a quote at <a style="color: #fff; text-decoration: none;" href="http://www.vistahardwood.com">www.vistahardwood.com</a>.
        <br>
        Vista Hardwood Floors &bull; <span class="mobile-link--footer">P.O. Box 2495, Evergreen, CO 80437</span> &bull; <span class="mobile-link--footer" style="color: #fff; text-decoration: none;">(303) 902-9403</span>
        <br>
        <a style="color:#fff; text-decoration:underline;"><a style="color: #fff; text-decoration: none;" href="mailto:michael@vistahardwood.com">micheal@vistahardwood.com</a>
      </td>
    </tr>
